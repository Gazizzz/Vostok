extends base

block headerInner
  .row
    .columns
      nav(aria-label='You are here:', role='navigation')
        ul.breadcrumbs
          li
            a(href='/') Главная
          li Акции
      h1 Акции

block content
  include partials/service
  -
    var serviceList = [
      'Ремонт АКПП',
      'Ремонт МКПП',
      'Ремонт ДВС',
      'Ремонт <br> ходовой части',
      'Диагностика <br> автомобиля',
      'Техническое <br> обслуживание',
    ]

  main.section.section_circles
    .row
      ul.no-bullet
        each service, idx in serviceList
          .columns.large-4.medium-6
            +service-card(service, idx)

  include partials/map
